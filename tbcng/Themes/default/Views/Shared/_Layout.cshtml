</head>

<body>
    <!--Kode Wrapper Start-->
    <div class="cp-wrapper" id="cp-rider-store">
        @Html.Partial("_HeaderPartial")

        <!--Main Banner Wrap Start-->
        @*@RenderSection("MainBanner", false)*@
