@model List<tbcng.Models.product>
@if (Model != null)
{
    if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            var link = "/san-pham/" + tbcng.Helpers.configs.getcatnameurl(item.cat_id) + "/" + tbcng.Helpers.configs.unicodeToNoMark(item.product_name) + "-" + item.product_id;
            var image=item.product_photo;
            <div class="item item-carousel">
                <div class="products">
                    <div class="product">
                        <div class="product-image">
                            <div class="image">
                                <a href="@link"><img src="@image" data-echo="@image" alt="@item.product_name" style="width:195px;height:243px;border:1px solid #555;"></a>
                            </div><!-- /.image -->
                            @*<div class="tag new"><span>mới</span></div>*@
                        </div><!-- /.product-image -->
                        <div class="product-info text-left">
                            <h3 class="name"><a href="@link">@item.product_name</a></h3>
                            @*<div class="rating rateit-small"></div>*@
                            <div class="description"></div>
                            <div class="product-price">
                                <span class="price">
                                    @String.Format("{0:n0}", item.product_price_public != null ? item.product_price_public : 0)
                                </span>
                            </div><!-- /.product-price -->
                        </div><!-- /.product-info -->
                        <div class="cart clearfix animate-effect">
                            <div class="action">
                                <ul class="list-unstyled">
                                    <li class="add-cart-button btn-group">
                                        <button class="btn btn-primary icon" data-toggle="dropdown" type="button">
                                            <i class="fa fa-shopping-cart"></i>
                                        </button>
                                        <button class="btn btn-primary" type="button" onclick="addToCart(@item.product_id);">Thêm giỏ hàng</button>
                                    </li>
                                    @*<li class="lnk wishlist">
                                        <a class="add-to-cart" href="@link" title="Wishlist">
                                            <i class="icon fa fa-heart"></i>
                                        </a>
                                    </li>
                                    <li class="lnk">
                                        <a class="add-to-cart" href="@link" title="Compare">
                                            <i class="fa fa-retweet"></i>
                                        </a>
                                    </li>*@
                                </ul>
                            </div><!-- /.action -->
                        </div><!-- /.cart -->
                    </div>
                </div>
            </div><!--Product Item End-->          
        }
    }
}

