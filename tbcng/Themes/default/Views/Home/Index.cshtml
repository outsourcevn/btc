@{
    ViewBag.Title = "BaTaCa.Vn";
    int countslide = 0;
}
<div class="body-content outer-top-xs" id="top-banner-and-menu">
    <div class="container">
        <div class="row">
            <!-- ============================================== SIDEBAR ============================================== -->
            <div class="col-xs-12 col-sm-12 col-md-3 sidebar">
                <div class="side-menu animate-dropdown outer-bottom-xs">
                    <div class="head"><i class="icon fa fa-align-justify fa-fw"></i> Danh Mục</div>
                    <nav class="yamm megamenu-horizontal" role="navigation">
                        <ul class="nav">
                            @Html.Raw(@tbcng.Helpers.configs.getAllMenuLeft(44))
                        </ul><!-- /.nav -->
                    </nav><!-- /.megamenu-horizontal -->
                </div>
                <div class="sidebar-widget outer-bottom-small wow fadeInUp">
                    <h3 class="section-title">Sản phẩm đặc biệt</h3>
                    <div class="sidebar-widget-body outer-top-xs">
                        <div class="owl-carousel sidebar-carousel special-offer custom-carousel owl-theme outer-top-xs">
                            <div class="item">
                                <div class="products special-product">
                                    @foreach (var item in ViewBag.special)
                                    {
                                        var link = "/san-pham/" + tbcng.Helpers.configs.getcatnameurl(item.cat_id) + "/" + tbcng.Helpers.configs.unicodeToNoMark(item.product_name) + "-" + item.product_id;
                                        <text>
                                            <div class="product">
                                                <div class="product-micro">
                                                    <div class="row product-micro-row">
                                                        <div class="col col-xs-5">
                                                            <div class="product-image">
                                                                <div class="image">
                                                                    <a href="@link" data-lightbox="image-1" data-title="@item.product_name">
                                                                        <img data-echo="@item.product_photo" src="@item.product_photo" alt="" style="width:100px;height:120px;border:1px solid #555;">
                                                                        <div class="zoom-overlay"></div>
                                                                    </a>
                                                                </div><!-- /.image -->
                                                                @*<div class="tag tag-micro hot">
                                                                    <span>hot</span>
                                                                </div>*@
                                                            </div><!-- /.product-image -->
                                                        </div><!-- /.col -->
                                                        <div class="col col-xs-7">
                                                            <div class="product-info">
                                                                <h3 class="name"><a href="@link">@item.product_name</a></h3>
                                                                @*<div class="rating rateit-small"></div>*@
                                                                <div class="product-price">
                                                                    <span class="price">
                                                                        @String.Format("{0:n0}", item.product_price_public != null ? item.product_price_public : 0)
                                                                    </span>
                                                                </div><!-- /.product-price -->
                                                                <div class="action"><a onclick="addToCart(@item.product_id);" class="lnk btn btn-primary">--> Giỏ Hàng</a></div>
                                                            </div>
                                                        </div><!-- /.col -->
                                                   </div><!-- /.product-micro-row -->
                                               </div><!-- /.product-micro -->
                                            </div><!-- products-->
                                          </text>
                                      }
                                 </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-9 homebanner-holder">
                <div id="hero">
                    <div id="owl-main" class="owl-carousel owl-inner-nav owl-ui-sm">
                        <div class="item" style="background-image: url(/Content/themes/pthg/assets/images/sliders/01.jpg);">
                            <div class="container-fluid">
                                <div class="caption bg-color vertical-center text-left">
                                    <div class="big-text fadeInDown-1" style="text-shadow: 1px 1px 2px black, 0 0 1em #232f3e, 0 0 0.2em darkblue;color: white;font-size: 30px;">
                                        Camera giám sát giao thông
                                    </div>
                                    <div class="excerpt fadeInDown-2 hidden-xs" style="text-shadow:1px 1px 2px black, 0 0 1em #232f3e, 0 0 0.2em darkblue;color: white;font-size: 20px;">
                                        <span>Giá chỉ 4.490.000 đồng </span>
                                    </div>
                                    <div class="button-holder fadeInDown-3">
                                        <a href="#" class="btn-lg btn btn-uppercase btn-primary shop-now-button">Mua ngay</a>
                                    </div>
                                </div><!-- /.caption -->
                            </div><!-- /.container-fluid -->
                        </div><!-- /.item -->
                        <div class="item" style="background-image: url(/Content/themes/pthg/assets/images/sliders/2.jpg);">
                        <div class="container-fluid">
                            <div class="caption bg-color vertical-center text-left">
                                <div class="big-text fadeInDown-1" style="text-shadow: 1px 1px 2px black, 0 0 1em #232f3e, 0 0 0.2em darkblue;color: white;font-size: 30px;">
                                    Máy in Canon PIXMA iP8770 6 màu
                                </div>
                                <div class="excerpt fadeInDown-2 hidden-xs" style="text-shadow:1px 1px 2px black, 0 0 1em #232f3e, 0 0 0.2em darkblue;color: white;font-size: 20px;">
                                    <span>Giá chỉ 8.800.000 đồng</span>
                                    @*<span>27-Inch Starting At $1799</span>*@
                                </div>
                                <div class="button-holder fadeInDown-3">
                                    <a href="#" class="btn-lg btn btn-uppercase btn-primary shop-now-button">Shop Now</a>
                                </div>
                            </div><!-- /.caption -->
                        </div><!-- /.container-fluid -->
                    </div><!-- /.item -->

                    </div><!-- /.owl-carousel -->
                </div>
                <div class="info-boxes wow fadeInUp">
                    <div class="info-boxes-inner">
                        <div class="row">
                            <div class="col-md-6 col-sm-4 col-lg-4">
                                <div class="info-box">
                                    <div class="row">
                                        <div class="col-xs-2">
                                            <i class="icon fa fa-dollar"></i>
                                        </div>
                                        <div class="col-xs-10">
                                            <h4 class="info-box-heading">Hoàn Tiền</h4>
                                        </div>
                                    </div>
                                    <h6 class="text">30 ngày hoàn tiền ngay.</h6>
                                </div>
                            </div><!-- .col -->
                            <div class="hidden-md col-sm-4 col-lg-4">
                                <div class="info-box">
                                    <div class="row">
                                        <div class="col-xs-2">
                                            <i class="icon fa fa-truck"></i>
                                        </div>
                                        <div class="col-xs-10">
                                            <h4 class="info-box-heading">Giao hàng</h4>
                                        </div>
                                    </div>
                                    <h6 class="text">Giao hàng toàn quốc miễn phí</h6>
                                </div>
                            </div><!-- .col -->
                            <div class="col-md-6 col-sm-4 col-lg-4">
                                <div class="info-box">
                                    <div class="row">
                                        <div class="col-xs-2">
                                            <i class="icon fa fa-gift"></i>
                                        </div>
                                        <div class="col-xs-10">
                                            <h4 class="info-box-heading">Khuyến mại</h4>
                                        </div>
                                    </div>
                                    <h6 class="text">Giảm giá 20% các mặt hàng</h6>
                                </div>
                            </div><!-- .col -->
                        </div><!-- /.row -->
                    </div><!-- /.info-boxes-inner -->
                </div><!-- /.info-boxes -->
                @{Html.RenderAction("DanhMucSanPhamPartial");}
                <div class="section featured-product wow fadeInUp">
                    <h3 class="section-title">Sản phẩm nổi bật</h3>
                    <div class="owl-carousel home-owl-carousel custom-carousel owl-theme outer-top-xs">
                        @foreach (var item in ViewBag.feature)
                        {
                            var link = "/san-pham/" + tbcng.Helpers.configs.getcatnameurl(item.cat_id) + "/" + tbcng.Helpers.configs.unicodeToNoMark(item.product_name) + "-" + item.product_id;
                            var image = item.product_photo;
                            <div class="item item-carousel">
                                <div class="products">
                                    <div class="product">
                                        <div class="product-image">
                                            <div class="image">
                                                <a href="@link"><img src="@image" data-echo="@image" alt="@item.product_name" style="width:195px;height:243px;border:1px solid #555;"></a>
                                            </div><!-- /.image -->
                                            @*<div class="tag new"><span>chú ý</span></div>*@
                                        </div><!-- /.product-image -->
                                        <div class="product-info text-left">
                                            <h3 class="name"><a href="@link">@item.product_name</a></h3>
                                            @*<div class="rating rateit-small"></div>*@
                                            <div class="description"></div>
                                            <div class="product-price">
                                                <span class="price">
                                                    @String.Format("{0:n0}", item.product_price_public != null ? item.product_price_public : 0)
                                                </span>
                                            </div><!-- /.product-price -->
                                        </div><!-- /.product-info -->
                                        <div class="cart clearfix animate-effect">
                                            <div class="action">
                                                <ul class="list-unstyled">
                                                    <li class="add-cart-button btn-group">
                                                        <button class="btn btn-primary icon" data-toggle="dropdown" type="button">
                                                            <i class="fa fa-shopping-cart"></i>
                                                        </button>
                                                        <button class="btn btn-primary" type="button" onclick="addToCart(@item.product_id);">Thêm giỏ hàng</button>
                                                    </li>
                                                    <li class="lnk wishlist">
                                                        <a class="add-to-cart" href="@link" title="Wishlist">
                                                            <i class="icon fa fa-heart"></i>
                                                        </a>
                                                    </li>
                                                    <li class="lnk">
                                                        <a class="add-to-cart" href="@link" title="Compare">
                                                            <i class="fa fa-retweet"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div><!-- /.action -->
                                        </div><!-- /.cart -->
                                    </div>
                                </div>
                            </div><!--Product Item End-->
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>