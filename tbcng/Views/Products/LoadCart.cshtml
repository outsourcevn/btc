@model List<tbcng.Models.product_order>
@if (Model != null)
{
    
       
    if (Model.Count > 0)
    {
        foreach (var item in Model) {
            <text>
                <div class="cart-item product-summary" id="cartitem_@item.id">
                    <div class="row">
                        <div class="col-xs-4">
                            <div class="image">
                                <a href="#"><img src="@item.product_photos" alt="" style="width:47px;height:61px;border:1px solid #e3e3e3;"></a>
                            </div>
                        </div>
                        <div class="col-xs-7">

                            <h3 class="name"><a href="#">@item.product_name</a></h3>
                            <div class="price">@String.Format("{0:n0}", item.product_price != null ? item.product_price : 0)</div>
                        </div>
                        <div class="col-xs-1 action">
                            <a onclick="removeCartItem(@item.id);" style="cursor:pointer;"><i class="fa fa-trash"></i></a>
                        </div>
                    </div>
                </div>
            </text>

        }
    }
    <script>
        document.getElementById("totalcartitems").innerHTML = "@Model.Count";
    </script>
}
